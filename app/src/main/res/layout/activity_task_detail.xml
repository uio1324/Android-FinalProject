<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.great.project.Activities.TaskDetail">
    <RelativeLayout
        android:id="@+id/taskDetail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/taskDetail_taskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务名称"
            android:textSize="40sp"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/taskDetail_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介："
            android:textSize="20sp"
            android:textColor="#C0C0C0"
            android:layout_marginStart="20dp"
            android:layout_below="@id/taskDetail_taskName"/>
        <TextView
            android:id="@+id/taskDetail_hint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="截止日期："
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="20dp"
            android:layout_below="@id/taskDetail_brief"/>
        <TextView
            android:id="@+id/taskDetail_hint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="由"
            android:textSize="20sp"
            android:textColor="#AFEEEE"
            android:layout_marginStart="20dp"
            android:layout_below="@id/taskDetail_hint1"/>
        <TextView
            android:id="@+id/taskDetail_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建者"
            android:textSize="20sp"
            android:textColor="#AFEEEE"
            android:layout_below="@id/taskDetail_hint1"
            android:layout_toEndOf="@id/taskDetail_hint2"/>
        <TextView
            android:id="@+id/taskDetail_hint3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建"
            android:textSize="20sp"
            android:textColor="#AFEEEE"
            android:layout_below="@id/taskDetail_hint1"
            android:layout_toEndOf="@id/taskDetail_creator"/>
        <com.example.great.project.Adapter.HorizontalListView
            android:id="@+id/taskDetail_participants"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/taskDetail_creator"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/taskDetail_taskInfoList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/taskDetail_header"
        app:layout_constraintBottom_toTopOf="@id/taskDetail_editor"/>
    <EditText
        android:id="@+id/taskDetail_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        app:layout_constraintTop_toBottomOf="@id/taskDetail_taskInfoList"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/taskDetail_sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送"
        app:layout_constraintLeft_toRightOf="@id/taskDetail_editor"
        app:layout_constraintTop_toTopOf="@id/taskDetail_editor"
        app:layout_constraintBottom_toBottomOf="@id/taskDetail_editor"/>
</android.support.constraint.ConstraintLayout>
